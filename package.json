{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot built with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "ts-node --watch src/index.ts",
    "stop": "./stop-bot.sh",
    "restart": "npm run stop && sleep 2 && npm run dev"
  },
  "keywords": [
    "telegram",
    "bot",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.64.0",
    "p-limit": "^5.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.40.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/sqlite3": "^3.1.11",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
